<div class="container">
  <div class="row">
    <div class="col-4">
      <%= cl_image_tag @account.photo.url, class: "photo img-rounded" %>
    </div>
    <div class="col-8 text-left">
      <h1><%= @account.full_name %></h1>
      <%= link_to "Edit Profile", edit_account_registration_path, class: "btn btn-secondary" %>
      <div class="profile-stas"><%= @account.posts.count %> posts</div>
      <div class="profile-stas"><%= @account.total_followers %> followers</div>
      <div class="profile-stas"><%= @account.total_following %> following</div>
    </div>
  </div>
</div>

